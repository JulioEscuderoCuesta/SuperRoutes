<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperRoutes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="Theme.SuperRoutes.NoActionBar" parent="Theme.SuperRoutes">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="textViewApplicationTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fonts_style</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textViewTitleMainActivityStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/fonts_style</item>
    </style>
    <style name="MainButtonsStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/fonts_style</item>
        <item name="android:background">@drawable/main_button</item>
    </style>
    <style name="SecondaryButtonsStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/fonts_style</item>
        <item name="android:background">@drawable/main_button</item>
    </style>
    <style name="textViewSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/fonts_style</item>
    </style>
    <style name="editTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/fonts_style</item>
        <item name="android:background">@drawable/edittext</item>
    </style>

</resources>