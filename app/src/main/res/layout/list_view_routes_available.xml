<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_button">

    <TextView
        android:id="@+id/name_route_routes_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textViewApplication12dpStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="100dp"/>

    <TextView
        android:id="@+id/location_route_routes_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textViewApplication10dpStyle"
        app:layout_constraintStart_toStartOf="@+id/name_route_routes_available"
        app:layout_constraintTop_toBottomOf="@+id/name_route_routes_available"
        app:layout_constraintWidth_max="100dp"/>

    <ImageView
        android:id="@+id/difficulty_route_routes_available"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="@+id/name_route_routes_available"
        app:layout_constraintTop_toTopOf="@+id/image_route_routes_available"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/image_route_routes_available"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/difficulty_route_routes_available"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>