<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/route_card_background"
    tools:context=".ShowInformationProposalRouteSenderistFragment">

    <LinearLayout
        android:id="@+id/images_route_card_linear_layout"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:orientation="vertical"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_bottom_images"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/name_of_route_inside_card_senderist"
        style="@style/textViewHugeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the route"
        android:layout_marginTop="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="@+id/guideline_horizontal_bottom_images"/>

    <TextView
        android:id="@+id/location_of_route_senderist_routes_label"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/location_of_route_senderist_routes_label_text"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/name_of_route_inside_card_senderist" />

    <TextView
        android:id="@+id/location_information_senderist_routes_text"
        style="@style/textViewApplication14dpStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location of Route"
        card_view:layout_constraintBottom_toBottomOf="@+id/location_of_route_senderist_routes_label"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_guide_end_location"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center"
        card_view:layout_constraintTop_toTopOf="@+id/location_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/difficulty_of_route_senderist_routes_label"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/difficulty_of_route_senderist_routes_label_text"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/location_of_route_senderist_routes_label" />

    <ImageView
        android:id="@+id/difficulty_icon_route_senderist_card"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/difficulty_easy"
        card_view:layout_constraintBottom_toBottomOf="@+id/difficulty_of_route_senderist_routes_label"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
        card_view:layout_constraintStart_toEndOf="@+id/difficulty_of_route_senderist_routes_label"
        card_view:layout_constraintTop_toTopOf="@+id/difficulty_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/date_of_route_senderist_routes_label"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/date_of_route_senderist_routes_label_text"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/duration_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/duration_of_route_senderist_routes"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 h"
        card_view:layout_constraintBottom_toBottomOf="@+id/duration_of_route_senderist_routes_label"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center"
        card_view:layout_constraintTop_toTopOf="@+id/duration_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/date_of_route_senderist_routes"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/2023"
        card_view:layout_constraintBottom_toBottomOf="@+id/date_of_route_senderist_routes_label"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center"
        card_view:layout_constraintTop_toTopOf="@+id/date_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/duration_of_route_senderist_routes_label"
        style="@style/textViewMediumTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/duration_of_route_senderist_routes_label_text"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/difficulty_of_route_senderist_routes_label" />

    <TextView
        android:id="@+id/guide_information_senderist_routes_text"
        style="@style/textViewApplication14dpStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guide's name"
        android:layout_marginTop="10dp"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/guide_image_route_senderist_card" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_card"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
        card_view:layout_constraintTop_toBottomOf="@+id/guide_information_senderist_routes_text">

        <TextView
            android:id="@+id/comment_senderist_routes_text"
            style="@style/textViewApplication12dpStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some comments"
            android:layout_gravity="top|center"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_2"
            card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_1"
            card_view:layout_constraintTop_toBottomOf="@+id/guide_information_senderist_routes_text" />
    </ScrollView>

    <ImageView
        android:id="@+id/guide_image_route_senderist_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/icons8_tour_guide_48"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintBottom_toTopOf="@+id/guideline_guide_top_image"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_guide_start_image"
        card_view:layout_constraintHorizontal_bias="0.448"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_guide_end_image"
        card_view:layout_constraintTop_toBottomOf="@+id/date_of_route_senderist_routes_label" />

    <Button
        android:id="@+id/close_proposal_button"
        style="@style/MainButtonsStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close_route_button"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/guideline_vertical_center"
        card_view:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/join_route_senderist_button"
        style="@style/MainButtonsStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/join_route_button"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="@+id/guideline_vertical_center" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_bottom_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_guide_top_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_guide_start_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_guide_end_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_guide_end_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.86" />
</androidx.constraintlayout.widget.ConstraintLayout>