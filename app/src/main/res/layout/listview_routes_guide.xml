<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/route_card_background"
    tools:context=".Menu">

    <TextView
        android:id="@+id/name_of_route_guide_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        style="@style/textViewMediumTextStyle"
        android:text="Name of the route"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_of_participants_slash_total"
        style="@style/textViewApplication12dpStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="6/8"
        app:layout_constraintStart_toStartOf="@+id/name_of_route_guide_routes"
        app:layout_constraintTop_toBottomOf="@+id/name_of_route_guide_routes" />

    <ImageView
        android:id="@+id/main_image_of_route"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_of_route_guide_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textViewApplication14dpStyle"
        android:layout_marginVertical="5dp"
        android:text="12/12/2023"
        app:layout_constraintStart_toStartOf="@+id/main_image_of_route"
        app:layout_constraintTop_toBottomOf="@+id/main_image_of_route" />



</androidx.constraintlayout.widget.ConstraintLayout>